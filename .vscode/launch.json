{
    "configurations": [
        {
            "name": "native-cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/apps/h8/native/detection/build/detection_app",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/apps/h8/native/detection",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "version": "2.0.0"
}